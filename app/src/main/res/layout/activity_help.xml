<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Custom Toolbar/Header -->
    <LinearLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/teal_primary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/abc_ic_ab_back_material"
            android:contentDescription="Back"
            android:padding="8dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/customToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card -->

            <!-- FEATURES Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEATURES"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"/>

            <!-- Deadlines Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/teal_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deadlines"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Tap the + button to add a new deadline\n• Use the calendar to view deadlines by date\n• Filter deadlines using the filter icon\n• Mark deadlines as complete with the checkbox"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Alarms Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/teal_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alarms"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Create alarms with custom labels\n• Toggle alarms on/off easily\n• Delete alarms you no longer need"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Timers Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/teal_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Timers"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Add multiple timers with custom durations\n• Start, pause, and restart timers\n• Long press on a timer to edit or delete it"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SUPPORT Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <!-- Contact Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:background="@drawable/icon_background"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/teal_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Need More Help?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="support@trackr.com"
                            android:textSize="14sp"
                            android:textColor="@color/teal_primary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>