<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Custom Toolbar/Header -->
    <LinearLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/teal_primary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/abc_ic_ab_back_material"
            android:contentDescription="Back"
            android:padding="8dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Track'r"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/customToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Logo Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/teal_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:background="@drawable/circle_background"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track'r"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0"
                        android:textSize="14sp"
                        android:textColor="#B2DFDB"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- INFORMATION Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFORMATION"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="4dp"/>

            <!-- About Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/teal_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Track'r"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track'r is a productivity application designed to help you manage your time effectively through alarms, deadlines, and timers."
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SDG 3 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_compass"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/teal_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SDG 3: Good Health and Well-being"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track'r supports SDG 3 by promoting good health through better time management, reduced stress, and improved productivity."
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SDG 8 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_manage"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/teal_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SDG 8: Decent Work and Economic Growth"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track'r enhances productivity and work efficiency, promotes better work-life balance, and fosters innovative work practices for sustainable economic growth."
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- DEVELOPMENT Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVELOPMENT"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>

            <!-- Credits Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/gray_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:background="@drawable/icon_background"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/teal_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developed for CS312"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?android:textColorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Computing\nBatangas State University"
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>