    <style name="CalendarDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Calendar Week Day Text Style - RESIZED -->
    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#008577</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Calendar Header Text Style - RESIZED -->
    <style name="CalendarHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#008577</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- NumberPicker Theme -->
    <style name="NumberPickerTheme">
        <item name="colorControlNormal">#008577</item>
        <item name="android:textColorPrimary">#008577</item>
        <item name="android:textSize">24sp</item>
