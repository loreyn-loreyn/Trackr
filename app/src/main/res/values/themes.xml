<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Theme.Trackr.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/teal_primary</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_600</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/gray_600</item>
        <item name="colorOutlineVariant">@color/gray_400</item>
    </style>

    <!-- Default Theme (set to light) -->
    <style name="Theme.Trackr" parent="Theme.Trackr.Light" />

    <!-- Splash Theme -->
    <style name="Theme.Trackr.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- NoActionBar Theme -->
    <style name="Theme.Trackr.NoActionBar" parent="Theme.Trackr.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Requirement #10: TextInputLayout without borders -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">12dp</item>
        <item name="boxStrokeWidthFocused">12dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@menu/bottom_nav_color</item>
        <item name="itemTextColor">@menu/bottom_nav_color</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Darker Date Picker Theme with Visible Buttons -->
    <style name="DarkerDatePickerTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">#005A4F</item>
        <item name="colorPrimaryVariant">#004D42</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#005A4F</item>
        <item name="colorAccent">#005A4F</item>
        <item name="android:colorAccent">#005A4F</item>
        <!-- CRITICAL: Make button text visible -->
        <item name="buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
    </style>

    <!-- Darker Time Picker Theme with Visible Buttons -->
    <style name="DarkerTimePickerTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">#005A4F</item>
        <item name="colorPrimaryVariant">#004D42</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#005A4F</item>
        <item name="colorAccent">#005A4F</item>
        <item name="android:colorAccent">#005A4F</item>
        <!-- CRITICAL: Make button text visible -->
        <item name="buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PickerButtonStyle</item>
    </style>

    <!-- Picker Button Style - Ensures OK/Cancel buttons are visible -->
    <style name="PickerButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#005A4F</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>